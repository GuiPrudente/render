{
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": {
				"parser": "lwc"
			}
		},
		{
			"files": "*.{cmp,page,component}",
			"options": {
				"parser": "html"
			}
		}
	],
	"singleQuote": true,
	"printWidth": 120,
	"proseWrap": "always",
	"tabWidth": 4,
	"requireConfig": false,
	"useTabs": true,
	"trailingComma": "none",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"jsxBracketSameLine": false,
	"semi": true
}
